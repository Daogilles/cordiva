{% for p in page.subpage %}
<div class="row-sm-40 row-md-40 row-lg-40 subpage-content anchor" id="{{p.post_name}}">

    <div class="subpage-inner subpage-inner-text col-sm-12 col-md-7 col-lg-7">
        <h3>{{p.post_title}}</h3>        
        {{p.post_content}}
    </div>

    {% if p.image_child is not empty %}
    <div class="subpage-inner subpage-inner-img col-sm-12 col-md-5 col-lg-5">
        <img src="{{p.image_child}}" alt="">
    </div>
    {% endif %}
    <div class="subpage-border"></div>
</div>
{% endfor %}