<div class="headlight">
    <div class="headlight-slider">
        {% for slide in slide_item %}
        <div class="headlight-slide" style="background:url({{slide.image}}) center center no-repeat;background-size:cover;">
            <div class="bg-mobile-slide" style="background:url({{slide.image}}) center center no-repeat;background-size:cover;"></div>
            <div class="wrapper container">
                <div class="headlight-slide-content">
                    <p>{{ slide.title }}</p>
                    {% if slide.video %}
                        <a href="{{slide.link}}" class="btn-purple video-fancybox">En savoir plus</a>
                    {% else %}
                        <a href="{{slide.link}}" class="btn-purple">En savoir plus</a>
                    {% endif %}
                </div>                
            </div>          
        </div>
        {% endfor %}
    </div>
</div>