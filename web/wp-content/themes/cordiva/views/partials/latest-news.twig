<div class="latest-news">
	<div class="container">
		<h1 class="home-title">Dernières actualités</h1>
		<div class="news-wrapper">
			<div class="row-sm-40 row-md-40 row-lg-40">
				{% for news in latest_news %}
			        <div class="col-sm-12 col-md-6 col-lg-4 news-item">
			        	<div class="news-inner">
			        		<div class="news-image">
			        			<img src="{{ news.image }}" alt="" class="valign">	
			        		</div>			        		
			        		<p>{{news.title}}</p>
			        		<a href="{{news.link}}">En savoir +</a>
			        	</div>		        	
			        </div>		        
			    {% endfor %}
			</div>
		</div>
	</div>
</div>
